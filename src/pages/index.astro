import Comentarios from '../components/Comentarios.astro';
---
<script>

	
	const servicios_img = document.querySelectorAll('.servicios_img');

	const observador = new IntersectionObserver(entry=>{
		entry.forEach(entry => {
			if (entry.isIntersecting) {
				entry.target.classList.add('show')
			}else{
				entry.target.classList.remove('show')
			}
		});
	},{
		threshold: 0.3
	})

	servicios_img.forEach(e=>{
		observador.observe(e)
	})


	
</script>



